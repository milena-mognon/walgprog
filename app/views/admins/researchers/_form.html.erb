<%= simple_form_for [:admins, @researcher] do |f| %>

  <%= f.error_notification %>

  <div class="form-row">
    <div class="col-sm-8">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :title, required: true %>
      <%= f.input :academic_title %>
      <%= f.input :genre, as: :radio_buttons, collection: [['Feminino', 'Feminino'], ['Masculino', 'Masculino']] %>

      <%= f.association :institution, collection: @institutions, required: true, prompt: t('prompt.select.f', name: t('activerecord.attributes.attribute_commons.institution')), input_html: { name: 'researcher[institution_affiliation]' } %>
    </div>

    <div class="col-4">

      <div id="box-image-preview" data-toggle="tooltip" data-placement="left" title="Clique na imagem para alterá-la">
        <div class="input-field image_preview">
          <div class="box-image center">
            <%= image_tag @researcher.image.url, class: 'file_preview active' %>
            <%= f.input :image, required: true, label: false, input_html: {accept: 'image/*'} %>
            <%= f.hidden_field :image_cache %>
          </div>
        </div>
        <div class="text-box text-center">
          <p class="text-input">Clique na imagem para alterá-la</p>
        </div>
      </div>

    </div>
  </div>

  <div class="d-flex">
    <%= link_to admins_researchers_path, class: 'btn btn-secondary float-left', active: :exclusive do %>
      <%= t('helpers.back') %>
    <% end %>

    <%= f.button :submit, class: 'btn-primary ml-auto' %>
  </div>

<% end %>
