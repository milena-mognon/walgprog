<tr>
  <td><%= researcher.name %> </td>
  <td></td>
  <td><%= researcher.title %></td>
  <td><%= researcher.academic_title %></td>
  <td><%= researcher.institution.name %></td>
  <td>
    <div class="btn-group">
      <%= link_to admins_researcher_path(researcher),
                  class: 'icon ml-2',
                  active: :exclusive do %>
        <%= icon('fas', 'search') %>
      <% end %>

      <%= link_to edit_admins_researcher_path(researcher),
                  class: 'icon ml-2',
                  active: :exclusive do %>
        <%= icon('fas', 'edit') %>
      <% end %>

      <%= link_to admins_researcher_path(researcher),
                  method: :delete,
                  class: 'icon text-danger ml-2 destroy',
                  data: {confirm: t('prompt.confirm')},
                  active: :exclusive do %>
        <%= icon('fas', 'trash') %>
      <% end %>
    </div>
  </td>
</tr>