<% provide(:head_title, t("researchers.index")) %>
<% provide(:page_title, t("researchers.index")) %>
<% provide(:title, t("researchers.index")) %>

<div class="col-md-12">
  <div class="row">
    <div class="input-group col-md-8">
      <input
        type="text"
        class="form-control btn-block"
        placeholder="<%= t('helpers.search') %>"
        aria-describedby="search-append">

      <span
        id="search-append"
        class="input-group-append">

      <span class="input-group-text">
        <i class="fe fe-search text-info"></i>
      </span>
    </span>
    </div>
    <div class="col-md-4 col-sm-12">
      <%= link_to new_admins_researcher_path, class: 'btn btn-outline-info btn-block', active: :exclusive do %>
        <i class="fe fe-plus mr-2"></i>
        <%= t('researchers.new') %>
      <% end %>
    </div>
  </div>
</div>
<div class="mt-5 col-md-12 row card-body-scrollable mt-5">
  <table class="table table-hover table-outline table-vcenter card-table">
    <thead>
    <tr>
      <th colspan="2"><%= t('activerecord.attributes.attribute_commons.name') %></th>
      <th><%= t('activerecord.attributes.researcher.title') %></th>
      <th><%= t('activerecord.attributes.researcher.academic_title') %></th>
      <th><%= t('activerecord.attributes.researcher.institution_affiliation') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @researchers.each do |r| -%>
      <tr>
        <td><%= r.name %> </td>
        <td></td>
        <td><%= r.title %></td>
        <td><%= r.academic_title %></td>
        <td><%= r.institution.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to admins_researcher_path(r.id), class: 'icon ml-2', active: :exclusive do %>
              <i
                data-toggle="tooltip"
                title="<%= t('helpers.show') %>"
                class="fas fa-search"></i>
            <% end %>
            <%= link_to edit_admins_researcher_path(r.id), class: 'icon ml-2', active: :exclusive do %>
              <i
                data-toggle="tooltip"
                title="<%= t('helpers.edit') %>"
                class="fas fa-edit"></i>
            <% end %>
            <%= link_to admins_researcher_path(r.id),
                        method: :delete,
                        data: { confirm: t('prompt.confirm') },
                        class: 'icon text-danger ml-2 destroy',
                        active: :exclusive do %>
              <i
                data-toggle="tooltip"
                title="<%= t('helpers.delete') %>"
                class="fa fa-trash"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>