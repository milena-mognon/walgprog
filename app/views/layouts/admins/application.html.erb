<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admins/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admins/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="<%= controller_name %>-<%= action_name %>">
    <div class="page">
      <div class="page-main">
        <%= render 'layouts/admins/header' %>
        <div class="container">


          <div class="page-header">
            <div class="page-options d-flex">
              <h1 class="page-title">
                <%= yield(:page_title) %>
              </h1>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-2 mb-4">
              <%= render 'layouts/admins/sidebar' %>
            </div>
            <div class="col-lg-9 order-lg-1">

              <nav aria-label="breadcrumb">
                <ol class='breadcrumb'>
                  <% breadcrumb_trail do |crumb| %>
                    <li class="breadcrumb-item <%= crumb.current? ? 'active' : '' %>">
                      <%= link_to_unless crumb.current?, crumb.name, crumb.url, (crumb.current? ? {'aria-current' => 'page'} : {}) %>
                      <%#= link_to crumb.name, crumb.url, html_options = {'aria-current' => 'page'} %>
                    </li>
                  <% end %>
                </ol>
              </nav>

              <div class="card">
                <div class="card-body">
                  <%= render 'shared/flash_messages' %>
                  <%= yield %>
                </div>
              </div>
            </div>

          </div> <!-- .container -->
        </div>
      </div>
      <%= render 'layouts/admins/footer' %>
    </div>
  </body>
</html>
